{
  "name": "whatsapp-dashboard",
  "version": "1.0.0",
  "description": "WhatsApp Business API Dashboard with webhook integration",
  "main": "backend/server.js",
  "scripts": {
    "start": "node backend/server.js",
    "dev": "nodemon backend/server.js",
    "pm2:start": "pm2 start ecosystem.config.cjs",
    "pm2:start:prod": "pm2 start ecosystem.config.cjs --env production",
    "pm2:stop": "pm2 stop all",
    "pm2:restart": "pm2 restart all",
    "pm2:reload": "pm2 reload all",
    "pm2:delete": "pm2 delete all",
    "pm2:logs": "pm2 logs",
    "pm2:status": "pm2 list",
    "pm2:save": "pm2 save",
    "pm2:startup": "pm2 startup",
    "build": "npm run build --prefix Frontend",
    "build:all": "npm run build --prefix Frontend && npm run build --prefix cardiot-bot-main",
    "install:all": "npm install && npm install --prefix Frontend && npm install --prefix cardiot-bot-main",
    "deploy": "npm run build:all && npm run pm2:start:prod && pm2 save"
  },
  "keywords": [
    "whatsapp",
    "webhook",
    "dashboard",
    "business-api"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.97.0",
    "axios": "^1.6.2",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "form-data": "^4.0.5",
    "multer": "^2.0.2",
    "node-cron": "^4.2.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "pm2": "^5.4.3"
  }
}